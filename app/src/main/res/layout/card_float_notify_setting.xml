<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/cardViewRelativeLayoutSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:text="@string/float_setting_card"
            android:textColor="@color/text_color_notify"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/show_float_view_rl"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">


        <com.forfan.bigbang.view.HintTextView
            android:id="@+id/show_float_view_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/show_float_view_request"
            app:msg="@string/show_float_view" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/show_float_view_switch"
            style="@style/hintTextViewswitchStyle" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/float_white_list_rl"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:text="@string/float_white_list" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/setting_floatview"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.forfan.bigbang.view.HintTextView
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/setting_float_intro"
            app:msg="@string/setting_floatview" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/show_notify_rl"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">


        <com.forfan.bigbang.view.HintTextView
            android:id="@+id/show_notify_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/show_notify_request"
            app:msg="@string/show_notify" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/show_notify_switch"
            style="@style/hintTextViewswitchStyle" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />


    <RelativeLayout
        android:id="@+id/long_press_rl"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">


        <com.forfan.bigbang.view.HintTextView
            android:id="@+id/long_press_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/long_press_request"
            app:msg="@string/long_press" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/open_from_outside_rl"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:text="@string/open_from_outside" />

    </RelativeLayout>

</LinearLayout>